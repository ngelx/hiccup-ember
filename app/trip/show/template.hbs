<div class="container-fluid no-padding page-banner about-banner row">
	<h3 class="trip-title">{{model.name}} <small>By xxx</small></h3>
	<ol class="breadcrumb no-padding no-bottom-margin">
		<li>{{moment-format model.startDate "Do MMM YYYY"}}</li>
		<li>{{moment-format model.endDate "Do MMM YYYY"}}</li>
	</ol>
  <ol class="breadcrumb no-padding no-bottom-margin">
    {{model.days}} Days
  </ol>
</div>

<div class="single-product container-fluid">
	<!-- Product Details -->
	<div class="product-detail container-fluid no-padding">
		<!-- Single Product Slider -->
		<div class="col-md-5 single-product-slider no-padding">
      {{#slick-slider autoplay=true arrows=false}}
        <div class="item">
          <img src="assets/images/blog/latest-1.jpg" alt="Slide">
        </div>
        <div class="item">
          <img src="assets/images/blog/latest-2.jpg" alt="Slide">
        </div>
      {{/slick-slider}}
		</div><!-- Single Product Slider /- -->

		<div class="col-md-7 no-padding">
			<div class="summary entry-summary">
        <div class="choose-color">
          <p><label>Start location: </label>{{model.startLocation}}</p>
          <p><label>End location: </label>{{model.endLocation}}</p>
        </div>
				<div class="description">
          <h4>Goals</h4>
					<p>asdadad {{model.goals}}</p>
				</div>
				<div class="size">
					<span>Planed Route</span>
					<label><small>asdadsa</small></label>
				</div>
			</div>
		</div>
	</div><!-- Product Details /- -->


	<div class="woocommerce-tabs">
		{{trip-detail-tabs trip=model}}
	</div>

	<div class="related-product">
		<h2>Compact Trip</h2>
		<h4><span>Download trip in PDF</span></h4>
		<!-- Product -->
	</div>
</div>


{{link-to "Edit" "trip.show.edit" model}}

{{outlet}}
