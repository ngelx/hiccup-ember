
{{#if trip }}
  {{partial "trip/show"}}
{{else}}
  <div class="latest-news container-fluid">
    <h2 class="text-center">This Trip is password protected.</h2>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <form {{action "tryPassword" on="submit"}}>
          <div class="row">
            <div class="col-md-12">
              {{input value=password class="form-control" placeholder="Password"}}
            </div>
            {{#if loginFailed}}
              <div class="alert alert-danger">Invalid Password.</div>
            {{/if}}
          </div>
          <div class="row">
            <div class="col-md-12 text-center">
              <button type="submit" class="btn btn-primary share-password">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
{{/if}}
