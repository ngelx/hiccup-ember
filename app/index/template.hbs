
<!-- Photo Slider -->
<div id="slider-section" class="slider-section container-fluid no-padding">
  <div class="row">

    {{#slick-slider autoplay=true arrows=false}}
      <div class="item">
        <img src="images/slider/slide-1.jpg" alt="Slide">
        <div class="carousel-caption">
          <h3>Planificate your <b>Hiking</b> </h3>
        </div>
      </div>
      <div class="item">
        <img src="images/slider/slide-2.jpg" alt="Slide">
        <div class="carousel-caption">
          <h3>Easy-to-use and <b>Free</b></h3>
        </div>
      </div>
      <div class="item">
        <img src="images/slider/slide-3.jpg" alt="Slide">
        <div class="carousel-caption">
          <h3>Share your <b>trip</b> with family and friends</h3>
        </div>
      </div>
    {{/slick-slider}}

  </div>
</div><!-- Photo Slider /- -->
<!-- Latest News -->
<!-- Features Section -->
<div id="features-section" class="features-section container-fluid no-padding">
  <div class="section-header">
    <h3>Create your trip</h3>
  </div><!-- Section Header /- -->

  <div class="row">
    {{trip-editor trip=model.new_trip}}
  </div>
</div><!-- Features Section /- -->

<div class="seprator-border row"></div>

<div id="latest-news" class="latest-news container-fluid">
  <!-- Section Header -->
  <div class="section-header">
    <h3>Public trips from other users <small>{{link-to "(See All)" "trip" }}</small></h3>
  </div><!-- Section Header /- -->
  <!-- Row -->
  <div class="row">
    {{#each model.trips as |tripy|}}
      {{#unless tripy.isNew }}
        {{trip-small-display trip=tripy}}
      {{/unless}}
    {{/each}}
  </div><!-- Row /- -->
</div><!-- Latest News /- -->
<div class="seprator-border row"></div>


{{outlet}}
